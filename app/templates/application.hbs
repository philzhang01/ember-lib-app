<header>
  <BsNavbar @type="dark" @backgroundColor="dark" @collapsed={{true}}
    @onCollapse={{fn (mut this.collapsed) true}}
    @onExpand={{fn (mut this.collapsed) false}} as |navbar|>
    <div class="container d-flex">
      <div class="navbar-header">
        <navbar.toggle />
        <LinkTo @route="index" class="navbar-brand">Library App</LinkTo>
      </div>
      <navbar.content>
        <navbar.nav as |nav|>
          <nav.item>
            <nav.link-to @route="index">Home</nav.link-to>
          </nav.item>
        </navbar.nav>
        <navbar.nav class="ml-auto" as |nav|>
          <nav.item>
            <nav.link-to @route="about">About</nav.link-to>
          </nav.item>
        </navbar.nav>
      </navbar.content>
    </div>
  </BsNavbar>
</header>

<main role="main" class="container mt-4">
  {{outlet}}
</main>