<h2>List</h2>
<div class="row">
  {{#each @model as |library|}}
  <div class="col-md-4">
    <LibraryItem @item={{library}}>
      <LinkTo @route='libraries.edit' @model={{library.id}} class='btn btn-success btn-xs'>
        Edit
      </LinkTo>
      <button class="btn btn-danger btn-xs" {{action 'deleteLibrary' library}}>Delete</button>
    </LibraryItem>
  </div>
  {{/each}}
</div>