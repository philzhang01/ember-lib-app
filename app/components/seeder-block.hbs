<div class="card card-body card-sm bg-light extra-padding-bottom">
  <h3>{{@sectionTitle}}</h3>
  <div class="form-inline">
    <div class="form-group has-feedback {{unless this.isCounterValid "has-error"}}">
      <label for="newRecords">Number of new records: </label>
      <Input @value={{this.counter}} class="form-control" id="newRecords"
        placeholder={{this.placeholder}} />
    </div>
    <button type="button" class="btn btn-primary" {{on 'click' this.generate}}
      disabled={{this.generateIsDisabled}}>
      {{#if @seedingInProgress}}
      <span class="glyphicon glyphicon-refresh spinning"></span> Generating...
      {{else}}
      Generate {{@sectionTitle}}
      {{/if}}
    </button>
    <button type="button" class="btn btn-danger float-right" {{on 'click' this.delete}}
      disabled={{this.deleteIsDisabled}}>
      {{#if @deletingInProgress}}
      <span class="glyphicon glyphicon-refresh spinning"></span> Deleting...
      {{else}}
      Delete All {{@sectionTitle}}
      {{/if}}
    </button>
  </div>
</div>

{{!-- done --}}